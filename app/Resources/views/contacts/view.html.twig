{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        {% if contacts is empty %}
            <p class="text-center">Address book is empty</p>
        {% endif %}
        
                <div class="table-striped">          
                  <table class="table default">
                    <thead>
                      <tr class="table-info">
                        <th>Action</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Birthday</th>
                        <th>Phone</th>
                        <th>Country</th>
                        <th>City</th>
                        <th>Zip</th>
                      </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts  %}
                      <tr>
                        <td>
                            <a class="btn btn-success" href="/edit-contact/{{ contact.id }}">Edit</a>&nbsp;
                            
                            <a class="btn btn-danger" class="delcontact" onclick="javascript: return deleletconfig();" href="/delete-contact/{{ contact.id }}">Delete</a>    
                        </td>
                        <td>{{ contact.firstname }} {{ contact.lastname }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.birthday|date('Y-m-d') }}</td>
                        <td>{{ contact.phonenumber }}</td>
                        <td>{{ contact.country }}</td>
                        <td>{{ contact.city }}</td>
                        <td>{{ contact.zip }}</td>
                      </tr>
                    {% endfor %}  
                    </tbody>
                  </table>
                  </div>
{% endblock %}

{% block javascripts %}
<script>
    function deleletconfig(){

    var del=confirm("Are you sure you want to delete this record?");
    if (del==true){
       alert ("Contact deleted")
    }else{
        alert("Contact Not Deleted")
    }
    return del;
    }
</script>

{% endblock %}